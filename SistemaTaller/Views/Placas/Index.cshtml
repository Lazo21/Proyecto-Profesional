@model IEnumerable<SistemaTaller.Models.Placa>

@{
    ViewBag.Title = "Vehículos";
}

<h2>Vehículos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-outline-success btn-lg" })
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar: @Html.TextBox("BuscarPlaca")
        <button> Buscar </button>
        <br />
        @Html.ActionLink("Todos los registros...", "Index")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlacaN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transmision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estilo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca.NombreMarca)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlacaN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Transmision)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estilo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca.NombreMarca)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IdPlaca }) <i class="fa fa-edit" style="font-size: 17px; color: forestgreen"></i>
            @Html.ActionLink("Details", "Details", new { id = item.IdPlaca }) <i class="fa fa-file" style="font-size: 17px; color: forestgreen"></i>
            @Html.ActionLink("Delete", "Delete", new { id = item.IdPlaca }) <i class="fa fa-trash" style="font-size: 17px; color: forestgreen"></i>
        </td>
    </tr>
}

</table>
<tr>
    <td>
        <div class="col-md-offset-1 col-md-1">
            @Html.ActionLink("Salir", "Index", "Home", null, new { @class = "btn btn-outline-primary btn-sm" })
        </div>
    </td>
</tr>

<script type="text/javascript" src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
@{
    var aler = Request.QueryString["evento"] ?? "";
}

<script type="text/javascript">
    //i'm using jquery ready event which will call the javascript chunk after the page has completed loading
    $(document).ready(function () {

        var indicador = '@aler';

        if (indicador === "1") {
            swal("Placa Guardada", "Exitosamente!", "success");
        }
        if (indicador === "2") {
            swal("Placa Modificada", "Exitosamente!", "success");
        }
        if (indicador === "3") {
            swal("Placa Eliminada", "Exitosamente!", "success");
        }
    });
</script>