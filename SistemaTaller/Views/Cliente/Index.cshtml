@model IEnumerable<SistemaTaller.Models.Cliente>

@{
    ViewBag.Title = "Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cliente</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-success btn-lg" })
</p>
@using (Html.BeginForm())
{
    <p>
        Buscar: @Html.TextBox("BuscarCliente")
        <button> Buscar</button>
        <br /> @Html.ActionLink("Todos los registros...", "Index")
    </p>
}
<div class="table-responsive">
    <table class="table table-striped table-hover table-amaru" id="MyData">
        <thead>
            <tr style="background-color:aliceblue">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cedula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaNacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdCliente }) <i class="fa fa-edit" style="font-size: 17px; color: forestgreen"></i>
                        @Html.ActionLink("Details", "Details", new { id = item.IdCliente }) <i class="fa fa-file" style="font-size: 17px; color: forestgreen"></i>
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdCliente }) <i class="fa fa-trash" style="font-size: 17px; color: forestgreen"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<tr>
    <td>
        <div class="col-md-offset-1 col-md-1">
            @Html.ActionLink("Salir", "Index", "Home", null, new { @class = "btn btn-outline-primary btn-sm" })
        </div>
    </td>
</tr>

<script type="text/javascript" src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
@{
    var aler = Request.QueryString["evento"] ?? "";
}

<script type="text/javascript">
    //i'm using jquery ready event which will call the javascript chunk after the page has completed loading
    $(document).ready(function () {

        var indicador = '@aler';

        if (indicador === "1") {
            swal("Cliente Guardado", "Exitosamente!", "success");
        }
        if (indicador === "2") {
            swal("Cliente Modificado", "Exitosamente!", "success");
        }
        if (indicador === "3") {
            swal("Cliente Eliminado", "Exitosamente!", "success");
        }
    });
</script>