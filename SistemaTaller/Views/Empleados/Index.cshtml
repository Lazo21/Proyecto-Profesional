@model IEnumerable<SistemaTaller.Models.Empleado>

@{
    ViewBag.Title = "Empleado";
}

<h2>Empleado</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-outline-success btn-lg" })
</p>
@using (Html.BeginForm())
{
    <p>
        Buscar: @Html.TextBox("BuscarEmpleado")
        <button> Buscar </button>
        <br />
        @Html.ActionLink("Todos los registros...", "Index")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IdEmpleado }) <i class="fa fa-edit" style="font-size: 17px; color: forestgreen"></i>
            @Html.ActionLink("Details", "Details", new { id = item.IdEmpleado }) <i class="fa fa-file" style="font-size: 17px; color: forestgreen"></i>
            @Html.ActionLink("Delete", "Delete", new { id = item.IdEmpleado }) <i class="fa fa-trash" style="font-size: 17px; color: forestgreen"></i>
        </td>
    </tr>
}

</table>
<tr>
    <td>
        <div class="col-md-offset-1 col-md-1">
            @Html.ActionLink("Salir", "Index", "Home", null, new { @class = "btn btn-outline-primary btn-sm" })
        </div>
    </td>
</tr>
<script type="text/javascript" src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
@{
    var aler = Request.QueryString["evento"] ?? "";
}

<script type="text/javascript">
    //i'm using jquery ready event which will call the javascript chunk after the page has completed loading
    $(document).ready(function () {

        var indicador = '@aler';

        if (indicador === "1") {
            swal("Empleado Guardado", "Exitosamente!", "success");
        }
        if (indicador === "2") {
            swal("Empleado Modificado", "Exitosamente!", "success");
        }
        if (indicador === "3") {
            swal("Empleado Eliminado", "Exitosamente!", "success");
        }
    });
</script>